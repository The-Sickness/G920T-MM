# Original by halaskk88
# Modified by UpInTheAir for SkyHigh kernels

BB=/system/xbin/busybox;
SWAP=/dev/block/vnswap0;

if [ "$($BB mount | grep rootfs | cut -c 26-27 | grep -c ro)" -eq "1" ]; then
	$BB mount -o remount,rw /;
fi;

case $1 in
vnswap0)
  P=/res/synapse/Sickness/vnswap0
  if [ ! -z "$2" ]; then
  if [ "$2" == Disabled ]; then
	$BB swapoff $SWAP > /dev/null 2>&1
	$BB sync;
	$BB echo "0" > /proc/sys/vm/swappiness;
	echo 0 > $P
  elif [ "$2" == Enabled ]; then
	$BB mkswap $SWAP > /dev/null 2>&1
	$BB swapon $SWAP > /dev/null 2>&1
	$BB sync;
	$BB echo "200" > /proc/sys/vm/swappiness;
	echo 1 > $P
  fi; fi
  copy=$(cat $P)
  if [ "$copy" == 0 ]; then
	echo Disabled
  elif [ "$copy" == 1 ]; then
	echo Enabled
  fi
  ;;
esac

$BB mount -t rootfs -o remount,ro rootfs;
